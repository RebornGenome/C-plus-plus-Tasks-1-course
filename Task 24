#include <iostream>
#include <limits>


void sequence()
{
    int h, sum = 0;
    double sr;
    std::cout << "This the program showing the arithmetic mean of three Sequences consisting of ten random numbers.\n";
    for (int i = 0; i < 3; i++)
    {
        for (int j = 0; j < 10; j++)
        {
            h = rand() % 10;
            std::cout << h << "\n";
            sum = sum + h;
        }
        sr = sum / 10;
        std::cout << "The arithmetic mean this Sequences equals: " << sum;
    }
}
int main()
{
    bool meanar;
    do 
    {
        sequence();
        std::cout << "\n";
        std::cout << "\nDo you want to repeat ? (yes - 1 , no - 0): ";
        std::cin >> meanar;
        std::cout << "\n";
    }
    while (meanar);
    return 0;
}
